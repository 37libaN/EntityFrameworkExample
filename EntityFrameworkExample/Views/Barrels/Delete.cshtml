@model EntityFrameworkExample.Models.Barrel

@{
    ViewBag.Title = "Deleting Barrel";
}
<br />
<head>
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
</head>
<h2>Delete a Barrel</h2>

<div>
    <br />
    <hr />
    <h3 style="color:#1b7980">Are you sure you want to delete this barrel?</h3>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Radius) (feet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Radius)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Height) (feet)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weight) (pounds)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt>
            @Html.DisplayName("Construction Material")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ConstructionMaterial)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contents)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contents)
        </dd>

        <dt>
            @Html.DisplayName("Current Location")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentLocation)
        </dd>

        <dt>
            @Html.DisplayName("Date Created")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
