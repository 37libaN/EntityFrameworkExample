@model EntityFrameworkExample.Models.Barrel

@{
    ViewBag.Title = "Deleting Barrel";
}
<head>
    <link href="~/Style/StyleSheet.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<div>
    <h3>Are you sure you want to delete this barrel?</h3>
    <div class="container" style="color:#8B92B3">
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayNameFor(model => model.Radius) (feet)
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.Radius)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayNameFor(model => model.Height) (feet)
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.Height)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayNameFor(model => model.Weight) (pounds)
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.Weight)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayName("Construction Material")
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.ConstructionMaterial)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayNameFor(model => model.Contents)
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.Contents)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayName("Current Location")
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.CurrentLocation)
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <dt>
                    @Html.DisplayName("Date Created")
                </dt>
            </div>
            <div class="col-sm-6">
                <dd>
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
            </div>
        </div>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-sm-6 col-sm-offset-5">
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>

            </div>
        }
    </div>


</div>
